{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ESNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "lib": ["es5", "es6", "esnext"],
        "rootDir": "./src/",
        "outDir": "./dist/"
    },
}
